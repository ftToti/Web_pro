<%= form_with model: @user, local: true do |f| %>
<table class="table">
	<tr>
		<th><%= f.label :name %></th>
		<td><%= f.text_field :name %></td>
	</tr>
	<tr>
		<th><%= f.label :desired_reward %></th>
		<td><%= f.text_field :desired_reward %></td>
	</tr>
	<tr>
		<th><%= f.label :strong_point %></th>
		<td><%= f.text_field :strong_point %></td>
	</tr>
	<tr>
		<th><%= f.label :introduction %></th>
		<td><%= f.text_area :introduction %></td>
	</tr>
	<tr>
		<th><%= f.label :profile_image %></th>
		<td><%= f.attachment_field :profile_image %></td>
	</tr>
	<tr>
		<th><%= f.label '使えるスキル' %></th>
		<td><%= collection_check_boxes(:possible, :skill_ids, Skill.all, :id, :item, include_hidden: false) %></td>
	</tr>
	<tr>
		<th><%= f.label '得意なスキル' %></th>
		<td><%= collection_check_boxes(:good, :skill_ids, Skill.all, :id, :item, include_hidden: false) %></td>
	</tr>
</table>
<%= f.submit %>
<% end %>